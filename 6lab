import sqlite3
import re



def createTable():
# Создание БД и Таблицы   
    conn = sqlite3.connect("Library.db")
    c = conn.cursor()
    c.execute('CREATE TABLE ARTICLE (id integer primary key autoincrement, title varchar(50), author varchar('
                '50), journal varchar(50), year varchar(50), '
                'pages varchar(50), volume varchar(50))')
    conn.commit()
    conn.close()
    return


def insertTable(dict_attr):
#Берем из словаря атрибуты в список, который затем вставляем в список
    conn = sqlite3.connect("Library.db")
    c = conn.cursor()
    DataList = [dict_attr['Title'], dict_attr['Author'], dict_attr['Journal'], dict_attr['Year'], dict_attr['Pages'],
                dict_attr['Volume']]
    c.execute('INSERT INTO ARTICLE(title, author, journal, year, pages, volume) values(?, ?, ?, ?, ?, ?)', DataList)
    conn.commit()
    return


